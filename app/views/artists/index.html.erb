<h1>Artists</h1>


 
    <% @artists.each do |artist| %>
      
      <div class="row">
        <div class="col-xs-6 col-sm-3">
          <div class="card card-artist">
            <h3 class="card-header"><%= artist.name %> <%=artist.surname %></h3>
            <div class="card-block">
                <h4 class="card-title"><%= artist.category%></h4>
                <p class="card-text"><%= artist.address %></p>
                <p class="card-text"><%= artist.email %></p>
                <a href="#" class="btn btn-primary">Learn more about him</a>
                <div class= "scaffold bouton">
                  <a><%= link_to 'Show', artist %></a>
                  <a><%= link_to 'Edit', edit_artist_path(artist) %></a>
                  <a><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></a>
                </div>
            </div>
          </div>
      </div>
    </div>
    <% end %>
 

